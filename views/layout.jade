doctype 5
html
  head
    title fortnight labs
    link( type="text/css", rel="stylesheet", href="http://fonts.googleapis.com/css?family=IM+Fell+Great+Primer:400,400italic" )
    link( type="text/css", rel="stylesheet", href="/fonts/fontello-76629639/css/fontello.css" )
    link( type="text/css", rel="stylesheet", href="/stylesheets/application.css" )
    link( type="text/css", rel="stylesheet", href="/fancybox/jquery.fancybox-1.3.4.css" )
    script( type="text/javascript", src="http://code.jquery.com/jquery-1.6.3.min.js" )
    script( type="text/javascript", src="/fancybox/jquery.fancybox-1.3.4.js" )
    script( type="text/javascript" )
      $(function() {
        $('#portfolio a').fancybox({ titlePosition: 'over' });
        $('#clients a').fancybox({ titlePosition: 'inside', width: 900, height: 600 });

      });
  body( class=template )
    #page
      aside
        h1
          img( src="/images/logo-black.png" )
          br
          a.logo( href="/" )
            em fortnight
            |  labs
        ul
          li: a( href="mailto:all@fortnightlabs.com" ) all@fortnightlabs.com
          li (415) 680-3864
          li: a.map( href="https://maps.google.com/maps?q=760+Market+St,+San+Francisco,+CA+(Fortnight+Labs)" )
            | 760 Market St.
            br
            | San Francisco, CA
        section#team
          ul
            - team = [ ['Visnu', 'Pitiyanuvath', 'visnu', 'visnup', 'visnu@fortnightlabs.com'], ['Gerad', 'Suyderhoud', 'geradsuyderhoud', 'gerad', 'gerad@fortnightlabs.com']]
            - each member in team
              li
                img.avatar( src="http://gravatar.com/avatar/#{md5(member[4])}?s=70&d=monsterid" )
                .name
                  = member[0]
                  br
                  span.last= member[1]
                .icons
                  a( href="http://linkedin.com/in/#{member[2]}" )
                    i.icon-linkedin
                  if member[3]
                    a( href="http://twitter.com/#{member[3]}" )
                      i.icon-twitter
                  | 
                  a( href="mailto:#{member[4]}" )
                    i.icon-mail

        footer &copy; 2011 fortnight labs

      #contents
        block body
