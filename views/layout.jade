      script( type="text/javascript" )
        // automatically reload stylesheets in development
        $(function() {
          if (location.host !== 'localhost:8000') return;
          var n = 0, stylesheets = $('link[rel="stylesheet"][href^="/"]');
          (function loop() {
            stylesheets.each(function(i, s) {
              $(s).prop('href', function(i, href) {
                return href.replace(/\\?.*|$/, '?' + n++);
              });
            });
            setTimeout(loop, 1000);
          })();
        });
