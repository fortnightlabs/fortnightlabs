!!! 5
%html
  %head
    %title fortnight labs
    %link{ :type => 'text/css', :rel => 'stylesheet', :href => 'http://fonts.googleapis.com/css?family=IM+Fell+Great+Primer:regular,italic' }
    %link{ :type => 'text/css', :rel => 'stylesheet', :href => '/application.css', :media => 'all' }
    %link{ :type => 'text/css', :rel => 'stylesheet', :href => '/fancybox/jquery.fancybox-1.3.4.css', :media => 'all' }
    %script{ :type => 'text/javascript', :src => 'http://code.jquery.com/jquery-1.5.2.min.js' }
    %script{ :type => 'text/javascript', :src => '/fancybox/jquery.fancybox-1.3.4.js' }
    :javascript
      $(function() {
        $('#portfolio a').fancybox({ titlePosition: 'over' });
        $('#clients a').fancybox({ titlePosition: 'inside', width: 900, height: 600 });

      });
  %body{ :class => params[:template] }
    #page
      - @pages = %w/ portfolio contact about /
      %nav
        %h1{ :class => request.path == '/' ? 'current' : '' }
          %img{ :src => '/images/logo.png' }
          %br
          %a.logo{ :href => '/' }
            %em fortnight
            labs
        %ul
          %li
            %a{ :href => 'mailto:all@fortnightlabs.com' } all@fortnightlabs.com
          %li 415.680.3864
          %li
            440-B 9th Street
            %br
            San Francisco
            (
            %a.map{ :href => 'http://maps.google.com/maps?q=440-B+9th+Street,+SF,+CA' }<> map
            )

      #contents
        #page-number= (@pages.index(params[:template]) || -1) * 2 + 3
        = yield

      #footer
        &copy; #{Time.now.year} fortnight labs &mdash; purveyors of fine apps.
